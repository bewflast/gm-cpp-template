{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "hidden": true,
            "name": "base",
            "environment": {
                "BUILD_DIRECTORY": "${sourceDir}/_builds",
                "INSTALL_DIRECTORY": "$env{BUILD_DIRECTORY}/_installs"
            },
            "cacheVariables": {
                "BUILD_SHARED_LIBS": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "BOOL",
                    "value": "OFF"
                }
            }
        }
    ]
}